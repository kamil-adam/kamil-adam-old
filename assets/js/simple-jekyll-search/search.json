---
layout: null
sitemap: false
---

{% capture json %}
[
  {% assign posts = site.posts | where_exp:'post','post.date' | reverse %}
  {% for post in site.posts %}
  {
    "url"         : {{ site.baseurl | append: post.url | jsonify }},
    "date"        : {{ post.date | date_to_xmlschema | date: '%Y-%m-%d' | jsonify }},
    "title"       : {{ post.title | strip_html | escape | jsonify}},
    "category"    : {{ post.category | jsonify }},
    "tags"        : {{ post.tags | join: ' ' | jsonify }},
    "discription" : {{ post.description | strip_html | strip_newlines | escape | jsonify }},
    "excerpt"     : {{ post.excerpt | markdownify | strip_html | strip_newlines | escape | jsonify }},
    "content"     : {{ post.content | markdownify | strip_html | strip_newlines | escape | jsonify }}
  } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
{% endcapture %}

{{ json | lstrip }}
